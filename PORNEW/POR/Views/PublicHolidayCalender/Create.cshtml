@model POR.Models.PublicHolidayCalender

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-wrapper" style="height:900px !important;">

        <section class="content-header">
            <h1>
                Calender
                <small>Create Holiday Calender</small>
            </h1>

            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>

            <div id="ErrorMessage">
                @if (TempData["ScfMsg"] != null)
                {
                    <div id="Msg" class="col-lg-12  alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <strong>Alert!</strong>&nbsp;@TempData["ScfMsg"]
                    </div>
                }
                else if (TempData["ErrMsg"] != null)
                {
                    <div id="Msg" class="col-lg-12 alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <strong>Alert!</strong>&nbsp;@TempData["ErrMsg"]
                    </div>
                }
            </div>
        </section>

        <section class="col-lg-12 connectedSortable">
            <div class="nav-tabs-custom">               
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <div class="box-body">
                        <div class="col-lg-6">              
                            <div class="form-group">
                                @Html.Label("Holiday Type", new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.HolidayTypeId, ViewBag.DDL_HolidayType as SelectList, "Select", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ApplicableDate, string.Empty, new { @class = "label label-danger" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Applicable Date", new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.ApplicableDate, new { @class = "form-control datepicker", autocomplete = "off", placeholder = "", MaxLength = "10" })                                                              
                                @Html.ValidationMessageFor(model => model.ApplicableDate, string.Empty, new { @class = "label label-danger" })                           
                             </div>
                            <div class="form-group">
                                @Html.Label("Reason", new { @class = "control-label" })
                                @Html.TextAreaFor(model => model.Reason, new { @class = "form-control ", autocomplete = "off", placeholder = "" })
                                @Html.ValidationMessageFor(model => model.Reason)
                            </div>                                                                  

                            <div class="form-group">
                                <div class="col-md-offset-10 col-md-1">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </div>
</section>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
