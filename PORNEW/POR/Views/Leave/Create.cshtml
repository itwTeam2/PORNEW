    $(function () {
        $('#Todate ').change(function () {
            var obj_LeaveHeader = {};
            obj_LeaveHeader.FromDate = $("#FromDate").val();
            obj_LeaveHeader.ToDate = $("#Todate").val();
            var Todate = $("#Todate").val();
            var FromDate = $("#FromDate").val();
            //  alert(Todate);
            $.ajax({
                type: 'POST',
                url: './DateCalc',
                dataType: 'json',
                data: '{obj_LeaveHeader: ' + JSON.stringify(obj_LeaveHeader) + '}',
