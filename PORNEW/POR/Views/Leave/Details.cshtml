                <dt class="form-group">
                    Service No
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ServiceNo)
                </dd>
                <dt class="form-group">
                    Service Type
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ServiceCategoryName)
                </dd>
                <dt class="form-group">
                    Rank
                </dt>
