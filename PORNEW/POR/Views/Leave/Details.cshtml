    <section class="col-lg-12 connectedSortable">
        <br />
        <ol class="breadcrumb">
            @{ dbContext _db = new dbContext(); }

            @if (ViewData["AllFlowStatus"] != null)
            {
                int? CurrentStatus_UserRole;
                string User;
                int? LogingUserRoleId = Convert.ToInt32(TempData["UserRoleId"]);

                if (TempData["CurrentStatusUserRole"] != null)
                {
                    CurrentStatus_UserRole = Convert.ToInt32(TempData["CurrentStatusUserRole"]);
                }
                else
                {
                    CurrentStatus_UserRole = null;
                }

                foreach (var DDR in ViewData["AllFlowStatus"] as IList<Vw_FlowStatus>)
                {
                    int i = 0;
                    if (DDR.CurrentStatus != 0)
                    {
                        if (ViewData["UserFlow_ToolTip"] != null)
                        {
                            foreach (var DDR_1 in ViewData["UserFlow_ToolTip"] as IList<Vw_FlowStatusUser_ToolTip>)
                            {
                                User = DDR_1.ServiceNo + " - " + DDR_1.Rank + " " + DDR_1.Name;
                                if (DDR_1.RID == null)
                                {
                                    int? RID = _db.UserInfoes.Where(x => x.UID == DDR_1.CreatedBy).Select(x => x.RoleId).FirstOrDefault();
                                    if (DDR.RID == RID && CurrentStatus_UserRole == DDR.RID)
                                    {
                                        i = 1;
                                        if (RID > 4)
                                        {
                                            <li class="active"> <a href="#" title="@User">@DDR.RoleName</a></li>
                                        }
                                        //<li class="active"> <a href="#" title="@User">@DDR.RoleName</a></li>
                                    }
                                    else if (DDR.RID == RID)
                                    {
                                        i = 1;
                                        if (RID > 4)
                                        {
                                            <li class="active"> <a href="#" title="@User">@DDR.RoleName</a></li>
                                        }
                                    }
                                }
                                else
                                {
                                    if (DDR.RID == DDR_1.RID && i == 0)
                                    {
                                        i = 1;
                                        if (DDR.RID > 4)
                                        {
                                            <li class="active"> <a href="#" title="@User">@DDR.RoleName</a></li>
                                        }
                                    }
                                }

                            }
                        }
                        if (i != 1)
                        {
                            if (LogingUserRoleId == DDR.RID)
                            {
                                if (DDR.RID > 4)
                                {
                                    <li class="active text-bold"> <a class="text-danger" href="#" title="">@DDR.RoleName</a></li>
                                }

                            }
                            else
                            {
                                if (DDR.RID > 4)
                                {
                                    <li class="active"> <a href="#" title="">@DDR.RoleName</a></li>
                                }
                            }
                        }
                    }

                }
            }
            <li class="active"><a class="details" href="javascript:;" id="details">...Flow History</a></li>
        </ol>
    </section>
