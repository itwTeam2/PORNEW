                {
                    <div class="col-lg-12">
                        @Html.ActionLink("Certify to ED", "Forward", "Leave", new { id = Model.LHID }, new { @class = "btn btn-success" })
                        <input id="btnReject" type="button" value="Reject" data-assigned-id="1000" data-toggle="modal" data-target="#exampleModalLong" class="btn btn-warning" />
                        @Html.ActionLink("Back to List", "index", "Leave", new { id = Model.LHID }, new { @class = "btn btn-info" })
                    </div>
                }
