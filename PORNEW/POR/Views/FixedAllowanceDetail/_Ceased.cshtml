@model POR.Models.Vw_FixedAllowanceDetail

@using (Html.BeginForm("IndexCeased", "FixedAllowanceDetail"))
{ 
   
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-horizontal">
        <div class="form-group col-md-12">           

            @Html.Label("Authority", new { @class = "control-label" })
            @Html.TextAreaFor(model => model.CampAuthority, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.CampAuthority, string.Empty, new { @class = "label label-danger" })
     
            @Html.Label("Ceased Date", new { @class = "control-label" })
            @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control datepicker", autocomplete = "off", placeholder = "MM/DD/YYYY"})
            @Html.ValidationMessageFor(model => model.CreatedDate, string.Empty, new { @class = "label label-danger" })
  
            @Html.Label("Remarks", new { @class = "control-label" })
            @Html.TextAreaFor(model => model.FMSID, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.FMSID, string.Empty, new { @class = "label label-danger" })
        </div>
   
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Ceased Allowacne" class="btn btn-primary" />
            </div>
        </div>
    </div>
    @Html.HiddenFor(model => model.FMSID)
    @Html.HiddenFor(model => model.FADID)
}
@Scripts.Render("~/bundles/jquery")