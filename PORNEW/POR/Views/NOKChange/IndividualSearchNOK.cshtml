@model PagedList.IPagedList<POR.Models.Nok._NOKChangeHeader>
@using PagedList.Mvc;

@{
    ViewBag.Title = "IndividualSearchMarried";
}
<div class="content-wrapper" style="height:900px !important;">

    <section class="content-header">
        <h1>
            NOK Change Details
            <small>View Details</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">NOK Search List</li>
        </ol>
        <div id="ErrorMessage">
            @if (TempData["ScfMsg"] != null)
            {
                <div id="Msg" class="col-lg-12  alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong> @TempData["ScfMsg"]
                </div>
            }
            else if (TempData["ErrMsg"] != null)
            {
                <div id="Msg" class="col-lg-12 alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong>@TempData["ErrMsg"]
                </div>

            }
        </div>
    </section>

    <section class="col-lg-12 connectedSortable">
        <div class="nav-tabs-custom">
            @Html.ValidationSummary(true)

            <div class="box-body">
                @using (Html.BeginForm("IndividualSearchNOK", "NOKChange", FormMethod.Get))
                {
                    int userRole = Convert.ToInt32(TempData["UserRole"]);

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="input-group">
                                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                        @if (userRole == (int)POR.Enum.UserRole.P3CLERK || userRole == (int)POR.Enum.UserRole.P3SNCO || userRole == (int)POR.Enum.UserRole.P3OIC)
                        {

                        }
                        else
                        {
                            <div class="col-lg-6">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="col-lg-4 btn btn-warning pull-right" id="btnYes" style="height:30px;width:180px" onclick="location.href='@Url.Action("AdvancedSearch", "GSQHeader")'">
                                            <span class="info-box-text"><i class=" fa fa fa-search"></i> Advanced Search</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                }

                <table id="example" class="table table-responsive table-striped table-hover">

                    <tr>
                        <th>
                            @Html.ActionLink("Service No", "NOKChange", "IndividualSearchNOK", new { sortOrder = "ServiceNo" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Rank", "NOKChange", "IndividualSearchNOK", new { sortOrder = "Rank" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Name With Initials", "NOKChange", "IndividualSearchNOK", new { sortOrder = "Name" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Location", "NOKChange", "IndividualSearchNOK", new { sortOrder = "CategoryName" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("POR No", "NOKChange", "IndividualSearchNOK", new { sortOrder = "Authority" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Current Status", "NOKChange", "IndividualSearchNOK", new { sortOrder = "RoleName" }, null)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rank)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RefNo)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "IndividualNOKDetails", new { id = item.FSNOKCDID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </table>
                <br />

                @*Paging for Data Table *use only MVC no Javascript*@
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("IndividualSearchNOK",
                 new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

            </div>
        </div>
    </section>

</div>

@Scripts.Render("~/bundles/jquery")










