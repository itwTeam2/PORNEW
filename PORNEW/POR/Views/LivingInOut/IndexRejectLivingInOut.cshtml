@model PagedList.IPagedList<POR.Models.Vw_LivingStatusReject>
@using PagedList.Mvc;
@{
    ViewBag.Title = "RejectIndex";
}
<div class="content-wrapper" style="height:900px !important;">

    <section class="content-header">
        <h1>
            Living In/Out Reject List
            <small>View and Reject</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Living IN/Out Reject List</li>
        </ol>
        <div id="ErrorMessage">
            @if (TempData["ScfMsg"] != null)
            {
                <div id="Msg" class="col-lg-12  alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong> @TempData["ScfMsg"]
                </div>
            }
            else if (TempData["ErrMsg"] != null)
            {
                <div id="Msg" class="col-lg-12 alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong>@TempData["ErrMsg"]
                </div>

            }
        </div>
    </section>

    <section class="col-lg-12 connectedSortable">
        <div class="nav-tabs-custom"style="margin-top:8px">
            @Html.ValidationSummary(true)

            <div class="box-body">
                @using (Html.BeginForm("IndexRejectLivingInOut", "LivingInOut", FormMethod.Get))
                {
                    <div class="input-group">
                        @Html.TextBox("SearchString", ViewBag.SearchString as string, new { @class = "form-control" })
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
                        </div>
                    </div>

                }

                <p>
                    <br />
                    @*<input type="button" id="forward" value="Forward" class="btn btn-primary" />
                        <input type="button" id="delete" value="Delete" class="btn btn-danger" />*@
                </p>
                <table id="example" class="table table-responsive table-striped table-hover">
                    <tr>
                        @*<th>
                            <input type="checkbox" id="checkAll" />
                        </th>*@

                        <th>
                            @Html.ActionLink("Service No", "RejectIndex", "Married", new { sortOrder = "ServiceNo" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Rank", "RejectIndex", "Married", new { sortOrder = "Rank" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Name With Initials", "RejectIndex", "Married", new { sortOrder = "Name" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Category Name", "RejectIndex", "Married", new { sortOrder = "CategoryName" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("POR No", "RejectIndex", "Married", new { sortOrder = "RefNo" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Establishment", "RejectIndex", "Married", new { sortOrder = "Location" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Authority", "RejectIndex", "Married", new { sortOrder = "Authority" }, null)
                        </th>

                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr class="text-orange">
                            @*<td>
                                <input type="checkbox" class="checkBox" value="@item.LIOHID" />
                            </td>*@

                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rank)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LivingStatusName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RefNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Authority)
                            </td>

                            <td>
                                @Html.ActionLink("Details", "Details", new { LIOHID = item.LIOHID, Rejectstatus = 2 }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>


                    }
                </table>
                <br />
                @*Paging for Data Table *use only MVC no Javascript*@
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("IndexRejectLivingInOut",
                 new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
            </div>
        </div>
    </section>
</div>

@Scripts.Render("~/bundles/jquery")

<script>

    //-----------------------------------All Delete
    $(document).ready(function () {

        $("#checkAll").click(function () {
            $(".checkBox").prop('checked',
                $(this).prop('checked'));
        });

        $("#delete").click(function () {
            var selectedIDs = new Array();
            $('input:checkbox.checkBox').each(function () {
                if ($(this).prop('checked')) {
                    selectedIDs.push($(this).val());
                }
            });
            var options = {};
            options.url = '../Leave/Delete';
            options.type = 'POST';
            options.data = JSON.stringify(selectedIDs);
            options.contentType = 'application/json';
            options.dataType = 'json';
            options.success = function (msg) {
                location.reload();
            };
            options.error = function () {
                // alert('Error while deleting the records!');
            };
            $.ajax(options);

        });
    });

    //------------------------------All Forward

    $(document).ready(function () {

        $("#checkAll").click(function () {
            $(".checkBox").prop('checked',
                $(this).prop('checked'));
        });

        $("#forward").click(function () {
            var selectedIDs = new Array();
            $('input:checkbox.checkBox').each(function () {
                if ($(this).prop('checked')) {
                    selectedIDs.push($(this).val());
                }
            });

            var options = {};
            options.url = '../Leave/Forward';
            options.type = 'POST';
            options.data = JSON.stringify(selectedIDs);
            options.contentType = 'application/json';
            options.dataType = 'json';
            options.success = function (msg) {
                location.reload();
            };
            options.error = function () {
                // alert('Error while deleting the records!');
            };
            $.ajax(options);

        });
    });

</script>
