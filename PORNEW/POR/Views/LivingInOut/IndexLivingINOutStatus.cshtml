@model PagedList.IPagedList<POR.Models.LivingInOut._LivingInOut>
@using PagedList.Mvc;
@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/adminlte/css/AdminLTE.css" rel="stylesheet" />
<div class="content-wrapper" style="height:900px !important;">

    <section class="content-header">
        <h1>
            Living IN/Out Forward List
            <small>Forward Your list</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Living IN/Out Forward List</li>
        </ol>
        <div id="ErrorMessage">
            @if (TempData["ScfMsg"] != null)
            {
                <div id="Msg" class="col-lg-12  alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong> @TempData["ScfMsg"]
                </div>
            }
            else if (TempData["ErrMsg"] != null)
            {
                <div id="Msg" class="col-lg-12 alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong>@TempData["ErrMsg"]
                </div>

            }
        </div>
    </section>

    <section class="col-lg-12 connectedSortable">
        <div class="nav-tabs-custom">
            @Html.ValidationSummary(true)

            <div class="box-body">
                @using (Html.BeginForm("IndexLivingINOutStatus", "LivingInOut", FormMethod.Get))
                {
                    int RoleIdforSearch = Convert.ToInt32(TempData["CurrentUserRole"]);
                    switch (RoleIdforSearch)
                    {
                        case (int)POR.Enum.UserRole.P3CLERK:
                        case (int)POR.Enum.UserRole.P3SNCO:
                        case (int)POR.Enum.UserRole.P3OIC:
                            <div class="col-lg-6">
                                <div class="col-lg-5">
                                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { placeholder = "Serach using Service No", @class = "form-control" })
                                </div>
                                <div class="col-lg-1">
                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            break;
                        default:
                            <div class="col-lg-6">
                                <div class="col-lg-5">
                                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { placeholder = "Serach using Service No", @class = "form-control" })
                                </div>
                                <div class="col-lg-1">
                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="col-lg-5">
                                    @Html.DropDownList("SearchStringLoc", ViewBag.DDL_Location as SelectList, "SELECT", htmlAttributes: new { @class = "form-control" })
                                </div>
                                <div class="col-lg-1">
                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            break;
                    }
                         
                }

                @{
                    int RId = Convert.ToInt32(TempData["CurrentUserRole"]);

                    if (RId != (int)POR.Enum.UserRole.ACCOUNTS01)
                    {
                        <p style="margin-top:20px">
                            <br />
                            <input type="button" id="forward" value="Forward" class="btn btn-primary" />
                        </p>
                    }


                }               

                <table id="example" class="table table-responsive table-striped table-hover">
                    @{
                        /// me conndition eka denme role eka accounts 01 nam all records forward karana check box and button eka disable karanna
                        int RoleId = Convert.ToInt32(TempData["CurrentUserRole"]);
                        if (RoleId == (int)POR.Enum.UserRole.ACCOUNTS01)
                        {
                            <tr>
                                                               
                                <th>
                                    Service No
                                </th>
                                <th>
                                    Rank
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Location
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Referance No
                                </th>
                                <th></th>
                                <th></th>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <th>
                                    <input type="checkbox" id="checkAll" />
                                </th>                                
                                <th>
                                    Service No
                                </th>
                                <th>
                                    Rank
                                </th>
                                <th>
                                    Name
                                </th>
                                
                                <th>
                                    @Html.ActionLink("Location", "IndexLivingINOutStatus", new { sortOrder = "Location" }, null)
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Referance No
                                </th>
                                <th></th>
                                <th></th>
                              
                            </tr>
                        }
                    }
                    

                    @foreach (var item in Model)
                    {
                        /// me conndition eka denme role eka accounts 01 nam all records forward karana check box and button eka disable karanna
                        if (item.CurrentUserRole == (int)POR.Enum.UserRole.ACCOUNTS01)
                        {
                            <tr>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Snumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rank)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RefNo)
                                </td>

                                <td>
                                    @Html.ActionLink("Details", "Details", new { LIOHID = item.LIOHID, Rejectstatus = 0 }, new { @class = "btn btn-primary" })
                                </td>
                                <td>
                                    @Html.ActionLink("Print", "PrintData", new { LIOHID = item.LIOHID }, new { @class = "btn btn-warning" })
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="checkBox" value="@item.LIOHID" />
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Snumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rank)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RefNo)
                                </td>

                                <td>
                                    @Html.ActionLink("Details", "Details", new { LIOHID = item.LIOHID, Rejectstatus = 0}, new { @class = "btn btn-primary" })
                                </td>
                                <td>
                                    @Html.ActionLink("Print", "PrintData", new { LIOHID = item.LIOHID }, new { @class = "btn btn-warning" })
                                </td>
                            </tr>
                        }
                    }


                </table>


                <br />
                @*Paging for Data Table *use only MVC no Javascript*@
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("IndexLivingINOutStatus",
                 new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, currentFilterLoc = ViewBag.CurrentFilterLoc }))
            </div>
        </div>
    </section>

    <div class="loading" id="dvloader">
        <img class="loading-image" src="~/Content/img/Spinner-3.gif" alt="Loading..." />
    </div>

</div>
@Scripts.Render("~/bundles/jquery")

<script>


    //---------------------All Forward

    $(document).ready(function () {

        $("#dvloader").hide();

        $("#checkAll").click(function () {
            $(".checkBox").prop('checked',
                $(this).prop('checked'));
        });

        $("#forward").click(function () {
            var selectedIDs = new Array();
            $('input:checkbox.checkBox').each(function () {
                if ($(this).prop('checked')) {
                    selectedIDs.push($(this).val());
                }
            });

            var options = {};
            options.url = '../LivingInOut/Forward';
            options.type = 'POST';
            options.data = JSON.stringify(selectedIDs);
            options.contentType = 'application/json';
            options.dataType = 'json';
            options.success = function (msg) {
                location.reload();

                $("#dvloader").show();
            };
            options.error = function () {
               // alert('Error while deleting the records!');
            };
            $.ajax(options);

        });
    });

</script>