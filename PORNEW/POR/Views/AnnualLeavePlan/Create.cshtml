@model POR.Models._AnnualLeavePlan

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper" style="height:900px !important;">
        <section class="content-header">
            <h1>
                Leave Detail
                <small></small>
            </h1>

            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>

            <div id="ErrorMessage">
                @if (TempData["ScfMsg"] != null)
                {
                <div id="Msg" class="col-lg-12  alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong>&nbsp;@TempData["ScfMsg"]
                </div>
                }
                else if (TempData["ErrMsg"] != null)
                {
                <div id="Msg" class="col-lg-12 alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong>&nbsp;@TempData["ErrMsg"]
                </div>
                }
            </div>
        </section>


        <section class="col-lg-8 connectedSortable">
            <div class="nav-tabs-custom">
                @Html.ValidationSummary(true)

                <div class="box-body">
                    <div class="form-horizontal">
                        <h4>AnnualLeavePlan</h4>
                        <hr />
                        @Html.ValidationSummary(true)                      

                        <div class="form-group">                           
                            <div class="col-md-6">
                                @Html.Label("Leave Category", new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.LeaveCategoryID, ViewBag.DDL_LeaveCategories as SelectList, "Select", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LeaveCategoryID, string.Empty, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="form-group">                           
                            <div class="col-md-6">
                                @Html.Label("Year", new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Year, new { @class = "form-control ", autocomplete = "off", placeholder = "Year", MaxLength = "25" })
                                @Html.ValidationMessageFor(model => model.Year, string.Empty, new { @class = "label label-danger input-xm" })
                            </div>
                        </div>

                        <div class="form-group">                           
                            <div class="col-md-6">
                                @Html.Label("Leave Of Days", new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.TotalLeaveDays, new { @class = "form-control ", autocomplete = "off", placeholder = "Days", MaxLength = "25" })
                                @Html.ValidationMessageFor(model => model.TotalLeaveDays, string.Empty, new { @class = "label label-danger input-xm" })
                            </div>
                        </div>   
                        <div class="form-group">
                            <div class="col-md-offset-1 connectedSortable" style="padding:0px !important;">
                                <input type="submit" value="Save" class="btn btn-primary btn-block" />
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </section>
    </div>
}

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
