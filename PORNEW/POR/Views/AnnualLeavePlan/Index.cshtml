@model IEnumerable<POR.Models.Vw_LeavePlan>

@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper" style="height:900px !important;">
    <section class="content-header">
        <h1>
            Fixed Allowances Details
            <small>View & Forwad to Next Authority</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
        <div id="ErrorMessage">
            @if (TempData["ScfMsg"] != null)
            {
                <div id="Msg" class="col-lg-12  alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong> @TempData["ScfMsg"]
                </div>
            }
            else if (TempData["ErrMsg"] != null)
            {
                <div id="Msg" class="col-lg-12 alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong>@TempData["ErrMsg"]
                </div>

            }
        </div>
    </section>

    <section class="col-lg-12 connectedSortable">
        <div class="nav-tabs-custom">
            @Html.ValidationSummary(true)

            <div class="box-body">
                @using (Html.BeginForm("Index", "AnnualLeavePlan", FormMethod.Get))
                {
                    <div class="input-group">
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
                        </div>
                    </div>

                }
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LeaveCategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Year)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalLeaveDays)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LeaveCategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Year)
                            </td>                           
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalLeaveDays)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ALPID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ALPID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ALPID })
                            </td>
                        </tr>
                    }

                </table>
            </div>
    </section>
</div>
            @Scripts.Render("~/bundles/jquery")


