@model POR.Models._UserInfo

@{
    ViewBag.Title = "DeactivateUser";
}

@using (Html.BeginForm())
{
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/business-casual.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/CustomScript.js"></script>
    @Html.AntiForgeryToken()

    if (TempData["SuccessMeg"] != null)
    {
        <div id="Msg" class="col-lg-12  alert alert-warning text-center">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Alert!</strong> @TempData["SuccessMeg"]
        </div>

    }
    else if (TempData["SuccessNotMeg"] != null)
    {
        <div id="Msg" class="col-lg-12  alert alert-danger text-center ">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Alert!</strong> @TempData["SuccessNotMeg"]
        </div>
    }

    <div class="content-wrapper">
        <section class="content-header">
            <div style="font-size:30px; float:left" class="glyphicon glyphicon-user"></div>
            <h1 style="margin-top: 6px; margin-left: 52px">Deactivate User</h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>
            <div id="ErrorMessage">
                @if (TempData["ScfMsg"] != null)
                {
                    <div id="Msg" class="col-lg-12  alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <strong>Alert!</strong>&nbsp;@TempData["ScfMsg"]
                    </div>
                }
                else if (TempData["ErrMsg"] != null)
                {
                    <div id="Msg" class="col-lg-12 alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <strong>Alert!</strong>&nbsp;@TempData["ErrMsg"]
                    </div>
                }
            </div>
        </section>
        <br />
        <section class="col-lg-7 connectedSortable">
            <div class="nav-tabs-custom">
                <div class="box-body">

                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.ServiceNo, new { @class = "form-control ", autocomplete = "off", placeholder = "Service No", MaxLength = "8" })
                        @Html.ValidationMessageFor(model => model.ServiceNo)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control ", autocomplete = "off", placeholder = "User Name", MaxLength = "8" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.LocationId, new { @class = "form-control ", autocomplete = "off", placeholder = "Location", MaxLength = "8" })
                        @Html.ValidationMessageFor(model => model.LocationId)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.RoleId, new { @class = "form-control ", autocomplete = "off", placeholder = "User Type"})
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Change Password" class="btn btn-success btn-block" />
                    </div>
                </div>
            </div>
        </section>

        <section class="col-lg-5 connectedSortable">
            <!-- Map box -->
            <div class="box box-solid bg-light-blue-gradient">
                <div class="box-header">
                    <!-- tools box -->
                    <div class="pull-right box-tools">

                        <button type="button" class="btn btn-primary btn-sm pull-right" data-widget="collapse"
                                data-toggle="tooltip" title="Collapse" style="margin-right: 5px;">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <!-- /. tools -->
                    <i class="fa fa-group"></i>
                    <h3 class="box-title">
                        Personal Details
                    </h3>
                </div>
                <div class="box-body">
                    <div id="world-map" style="height: 250px; width: 100%;">
                        <div id="PersonNumber" style="border-radius:40%">

                        </div>
                        <div id="PersonRank">

                        </div>
                        <div id="PersonName">

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
