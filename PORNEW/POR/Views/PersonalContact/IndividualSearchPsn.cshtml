
@model PagedList.IPagedList<POR.Models.PersonalContact._PsnContactHeader>
@using PagedList.Mvc;

@{
    ViewBag.Title = "IndividualSearchPsn";
}
<div class="content-wrapper" style="height:900px !important;">

    <section class="content-header">
        <h1>
            Personal Details Search
            <small>View Details</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Personal Search List</li>
        </ol>
        <div id="ErrorMessage">
            @if (TempData["ScfMsg"] != null)
            {
                <div id="Msg" class="col-lg-12  alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong> @TempData["ScfMsg"]
                </div>
            }
            else if (TempData["ErrMsg"] != null)
            {
                <div id="Msg" class="col-lg-12 alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong>@TempData["ErrMsg"]
                </div>

            }
        </div>
    </section>

    <section class="col-lg-12 connectedSortable">
        <div class="nav-tabs-custom">
           

            <div class="box-body">
                @using (Html.BeginForm("IndividualSearchPsn", "PersonalContact", FormMethod.Get))
                {
                    int userRole = Convert.ToInt32(TempData["UserRole"]);

                    <div class="row">
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.TextBox("SearchChildDetails", ViewBag.CurrentFilter as string, new { @class = "form-control",@placeholder = "Search Child Details" })
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.TextBox("SearchContactDetails", ViewBag.CurrentFilter as string, new { @class = "form-control" ,@placeholder = "Search Contact Details" })
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                        @if (userRole == (int)POR.Enum.UserRole.P3CLERK || userRole == (int)POR.Enum.UserRole.P3SNCO || userRole == (int)POR.Enum.UserRole.P3OIC)
                        {

                        }
                        else
                        {
                            <div class="col-lg-3">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="col-lg-4 btn btn-warning pull-right" id="btnYes" style="height:30px;width:180px" onclick="location.href='@Url.Action("AdvancedSearch", "PersonalContact")'">
                                            <span class="info-box-text"><i class=" fa fa fa-search"></i> Advanced Search</span>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="col-lg-4 btn btn-warning pull-right" id="btnYes" style="height:30px;width:180px" onclick="location.href='@Url.Action("AdvancedSearchPsnCon", "PersonalContact")'">
                                            <span class="info-box-text"><i class=" fa fa fa-search"></i>Advanced Search Person Contact</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                }

                <table id="example" class="table table-responsive table-striped table-hover" style="margin-top:10px">

                    <tr>
                        <th>
                            ServiceNo
                        </th>
                        <th>
                            Rank
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            CategoryName
                        </th>
                        <th>
                            Authority
                        </th>
                        <th>
                            RoleName
                        </th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rank)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RefNo)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.UserRoleName)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "IndividualPsnDetails", new { id = item.PCHID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }

                </table>
                
                <br />

                @*Paging for Data Table *use only MVC no Javascript*@
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("IndividualSearchPsn",
                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

            </div>
        </div>
    </section>

</div>

@Scripts.Render("~/bundles/jquery")










