
@model PagedList.IPagedList<POR.Models.PersonalContact._PsnContactHeader>
@using PagedList.Mvc;
@{
    ViewBag.Title = "IndexRejectPerson";
}
<div class="content-wrapper" style="height:900px !important;">

    <section class="content-header">
        <h1>
            Personal Contact Details
            <small>View Rejected Personal Contact Details</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
        <div id="ErrorMessage">
            @if (TempData["ScfMsg"] != null)
            {
                <div id="Msg" class="col-lg-12  alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong> @TempData["ScfMsg"]
                </div>
            }
            else if (TempData["ErrMsg"] != null)
            {
                <div id="Msg" class="col-lg-12 alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Alert!</strong>@TempData["ErrMsg"]
                </div>

            }
        </div>
    </section>

    <section class="col-lg-12 connectedSortable">
        <div class="nav-tabs-custom">
            @Html.ValidationSummary(true)

            <div class="box-body">
               
                <table id="example" class="table table-responsive table-striped table-hover">
                    <tr>
                        <th>
                            @*<input type="checkbox" id="checkAll" />*@
                        </th>
                        <th>
                            @Html.ActionLink("Service No", "IndexRejectPsnContact", "PersonalContact", new { sortOrder = "Sno" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Rank", "IndexRejectPsnContact", "PersonalContact", new { sortOrder = "Rank" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Name With Initials", "IndexRejectPsnContact", "PersonalContact", new { sortOrder = "Name" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Location", "IndexRejectPsnContact", "PersonalContact", new { sortOrder = "GSQ Location" }, null)
                        </th>
                        <th>
                            @Html.ActionLink("Referance No", "IndexRejectPsnContact", "PersonalContact", new { sortOrder = "POR No" }, null)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        int RoleId = Convert.ToInt32(TempData["RoleId"]);

                        <tr class="text-orange">
                            <td>
                                @*<input type="checkbox" class="checkBox" value="@item.GSQHID" />*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rank)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RefNo)
                            </td>

                            @if (RoleId == (int)POR.Enum.UserRole.P3CLERK || RoleId == (int)POR.Enum.UserRole.P2CLERK)
                            {
                                <td>
                                    @Html.ActionLink("Details", "Details", new { PCHID = item.PCHID, Rejectstatus = 2 }, new { @class = "btn btn-primary" })
                                </td>
                            }

                        </tr>
                    }

                </table>
                <br />
                @*Paging for Data Table *use only MVC no Javascript*@
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("IndexRejectPsnContact",
                 new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
            </div>
        </div>
    </section>
</div>

@Scripts.Render("~/bundles/jquery")



